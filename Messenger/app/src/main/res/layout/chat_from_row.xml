<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_from_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:id="@+id/frame_from_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/image_from_row"
        app:layout_constraintTop_toTopOf="@id/image_from_row"
        android:background="@drawable/rounded_field"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/textview_from_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:maxWidth="250dp"
            android:paddingHorizontal="10dp"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="tesT teXt"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/time_from_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginHorizontal="10dp"
            android:paddingBottom="5dp"
            android:text="23:00"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </FrameLayout>


</android.support.constraint.ConstraintLayout>